<h1 class="user-name"><%= @user.handle %></h1>

<br>

<% @posts.each do |post| %>
   <h4 class="content"><%= post.content %></h4>
<% end %>
<br>

<h2 class="likes">likes</h2>
<br>

<% @likes.each do |like| %>
   <% if like.post.user_id != @user.id %>
      <h5 class="content"><%= like.post.content %></h5>
   <% end %>
<% end %>
